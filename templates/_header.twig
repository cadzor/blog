{% set nav = craft.navigate.raw('nav') %}
<div class="w-full bg-gray-100 flex justify-center h-20 text-cyan-900">
    <div class="container max-w-3xl flex justify-between h-20 items-center">
        <div class="p-4">
            <a href="{{ siteUrl }}">benn's space</a>
        </div>

        {% if nav %}
        <nav>
            <ul class="flex justify-start">
                    {% for node in nav %}
                        <li class="p-4 underline"><a href="#">{{ node.name }}</a></li>
                    {% endfor %}
            </ul>
        </nav>
        {% endif %}

    </div>
</div>
